package heap;

import java.util.ArrayList;

public class Heap {
	private ArrayList<Integer> data = new ArrayList<>();
	private boolean ismin;

	public Heap(boolean ismin) {
		this.ismin = ismin;
	}

	public int size() {
		return data.size();
	}

	public boolean isEmpty() {
		return data.isEmpty();
	}

	public void display() {
		System.out.println(data);
	}

	public void add(int value) {
		data.add(value);
		upheapify(data.size() - 1);
	}

	private void upheapify(int ci) {
		int pi = (ci - 1) / 2;
		if (higherP(ci, pi)) {
			swap(ci, pi);
			upheapify(ci);
		}
		return;
	}

	private void swap(int i, int j) {
		int ith = data.get(i);
		int jth = data.get(j);

		data.set(ith, j);
		data.set(jth, i);
	}

	private boolean higherP(int i, int j) {
		int ith = data.get(i);
		int jth = data.get(j);
		if (ismin) {
			if (ith > jth) {
				return true;
			} else {
				return false;
			}
		} else {
			if (ith > jth) {
				return false;
			} else {
				return true;
			}
		}
	}
}
